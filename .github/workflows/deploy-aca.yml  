name: Deploy - Azure Container Apps

on:
  push:
    branches: ["main"]

permissions:
  id-token: write
  contents: read

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Azure Login (OIDC)
        uses: azure/login@v2
        with:
          client-id: ${{ secrets.AZURE_CLIENT_ID }}
          tenant-id: ${{ secrets.AZURE_TENANT_ID }}
          subscription-id: ${{ secrets.AZURE_SUBSCRIPTION_ID }}

      - name: Install Podman
        run: |
          sudo apt-get update
          sudo apt-get install -y podman

      - name: ACR Login (using az acr login token)
        run: |
          # Get ACR access token and login with Podman (no stored passwords)
          TOKEN=$(az acr login -n "${{ secrets.ACR_NAME }}" --expose-token --query accessToken -o tsv)
          podman login "${{ secrets.ACR_LOGIN_SERVER }}" -u 00000000-0000-0000-0000-000000000000 -p "$TOKEN"

      - name: Build & Push image (Podman)
        run: |
          IMAGE="${{ secrets.ACR_LOGIN_SERVER }}/${{ secrets.ACA_APP }}:${{ github.sha }}"
          podman build -t "$IMAGE" -f ./Dockerfile .
          podman push "$IMAGE"

      - name: Update Container App image
        run: |
          az extension add --name containerapp --upgrade
          IMAGE="${{ secrets.ACR_LOGIN_SERVER }}/${{ secrets.ACA_APP }}:${{ github.sha }}"
          az containerapp update -g "${{ secrets.AZURE_RG }}" -n "${{ secrets.ACA_APP }}" --image "$IMAGE"
